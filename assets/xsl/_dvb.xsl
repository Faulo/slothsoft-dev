<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">		<xsl:variable name="stopList" select="//stop"/> 	<xsl:template match="/data">		<html>			<head><title>Slothsoft - DVB</title>			<style type="text/css"><![CDATA[body {	font-size: 1.8em;}.table > * {	display: inline-block;	width: 50%;}label {	display: block;	margin: 0.25em 0;}button {	width: 100%;	line-height: 2em;	box-sizing: border-box;	font-size: 1em;}			]]></style>			</head>						<body>				<form action="https://m.dvb.de/de/verbindungsauskunft/verbindungen.do" method="GET">					<!--					<fieldset>						<legend>DVB Suche</legend>					-->						<div class="table">							<div>								<xsl:for-each select="$stopList">									<label>										<input type="radio" name="startid" value="{@id}"/>										<xsl:value-of select="@name"/>									</label>								</xsl:for-each>							</div>							<div>								<xsl:for-each select="$stopList">									<label>										<input type="radio" name="zielid" value="{@id}"/>										<xsl:value-of select="@name"/>									</label>								</xsl:for-each>							</div>						</div>						<button type="submit">Suchen</button>					<!--					</fieldset>					-->				</form>			</body>		</html>	</xsl:template></xsl:stylesheet>
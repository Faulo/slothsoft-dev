<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">		<xsl:variable name="swiss" select="//swiss"/>	<xsl:variable name="user" select="//user"/>	<xsl:variable name="title" select="concat($user/@name, &quot;'s &quot;, $swiss/@name, ' Poll')"/> 	<xsl:template match="/data">		<html>			<head><title><xsl:value-of select="$title"/></title>			<style type="text/css"><![CDATA[legend {	font-size: 1.4em;	font-weight: bold;}label {	display: block;}table {	border-spacing: 1em 0.25em;}td {	padding: 0;}.answer::before,.answer::after,label {	font-family: monospace;	vertical-align: super;}.answer::before {	content: "-5";}.answer::after {	content: "+5";}			]]></style>			</head>						<body>				<h1><xsl:value-of select="$title"/></h1>				<xsl:for-each select="$swiss">					<form action="?user={$user/@name}" method="POST">						<table>							<xsl:for-each select="question">								<xsl:for-each select="answer">									<tr>										<td>											<label>												<input type="radio" name="answer[{@key}]" value="3"/>												<xsl:value-of select="../@name"/>											</label>										</td>										<td>											<label>												<input type="radio" name="answer[{@key}]" value="1"/>											</label>										</td>										<td>											<label>												<xsl:value-of select="@name"/>												<input type="radio" name="answer[{@key}]" value="-3"/>											</label>										</td>									</tr>								</xsl:for-each>							</xsl:for-each>						</table>						<button type="submit">Save!!</button>						<p>Thank you! \o/</p>					</form>				</xsl:for-each>			</body>		</html>	</xsl:template></xsl:stylesheet>
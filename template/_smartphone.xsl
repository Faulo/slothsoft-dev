<?xml version="1.0" encoding="UTF-8"?><xsl:stylesheet version="1.0"	xmlns="http://www.w3.org/1999/xhtml"	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">		<xsl:variable name="smartphoneList" select="//smartphone"/>	<xsl:variable name="categoryList" select="//category"/>	<xsl:variable name="filterList" select="//filter"/>	<xsl:variable name="request" select="//request"/> 	<xsl:template match="/data">		<html>			<head>				<title>Smartphone List</title>				<style type="text/css"><![CDATA[			]]></style>			</head>						<body>				<h1>Smartphone List</h1>				<xsl:copy-of select="."/>				<form method="POST">					<table>						<thead>							<tr>								<xsl:for-each select="$categoryList">									<xsl:variable name="filter" select="$filterList[@name = current()/@name]"/>									<th>										<select name="filter[{@name}]">											<option value=""><xsl:value-of select="@name"/></option>											<xsl:for-each select="option">												<option>													<xsl:if test="@name = $filter/@value">														<xsl:attribute name="selected">selected</xsl:attribute>													</xsl:if>													<xsl:value-of select="@name"/>												</option>											</xsl:for-each>										</select>									</th>								</xsl:for-each>								<th><input type="submit"/></th>							</tr>						</thead>						<tbody>							<xsl:for-each select="$smartphoneList">								<xsl:variable name="smartphone" select="."/>								<tr>									<xsl:for-each select="$categoryList">										<td>											<xsl:value-of select="$smartphone/@*[name() = current()/@name]"/>										</td>									</xsl:for-each>									<td>										<a href="{@href-gsmarena}">GSMArena</a>										<xsl:text> </xsl:text>										<a href="{@href-idealo}">idealo.de</a>									</td>								</tr>							</xsl:for-each>						</tbody>					</table>				</form>			</body>		</html>	</xsl:template></xsl:stylesheet>